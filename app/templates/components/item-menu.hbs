{{#unless item._lnk}}
	<!--SI es un padre !-->
	<div class="tab">
		<input id="tab-{{item.id}}" type="checkbox" name="tabs">
		<label for="tab-{{item.id}}">{{item.label}}</label>
		<div class="tab-content">
			{{#each item.items as |child|}}
				{{#unless child._lnk}}
					<div class="half">
						{{item-menu item=child}}
					</div>
				{{else}}
					<div>{{child.label}}</div>
				{{/unless}}				
			{{/each}}		
		</div>
	</div>
{{else}}
	<!--SI No es un padre !-->
	<div>{{item.label}}</div>
{{/unless}}

